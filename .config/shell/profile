# Clipmenu vars
export CM_DIR="${XDG_CACHE_HOME}/clipmenu"
export CM_HISTLENGTH=20
export CM_LAUNCHER="/usr/local/bin/dmenu"
export CM_SELECTIONS="clipboard"
export CM_IGNORE_WINDOW="dmenu"

