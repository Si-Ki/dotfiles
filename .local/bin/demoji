#!/bin/sh

# The famous "get a menu of emojis to copy" script.

# Get user selection via dmenu from emoji file.
chosen=$(cut -d ';' -f1 ~/.local/bin/emoji | tofi --font="Iosevka Nerd Font" --font-size=11 --num-results=10 | sed "s/ .*//")

# Exit if none chosen.
[ -z "$chosen" ] && exit

	wtype "$chosen"
