#!/bin/sh


# choose the kind of screenshot to take, including copying the image or even
# highlighting an area to copy. scrotcucks on suicidewatch right now.

case "$(printf "Fullscreen\\nSelection (save)\\nHighlight\\nFullscreen (save)\\nBlur" | dmenu -l 6 -i)" in
  "Selection (save)") scrot -s ~/Pictures/ss/$(date '+%y%m%d-%H%M-%S').png ;;
  "Highlight") scrot -shole '/tmp/%F_%T_$wx$h.png' -e 'xclip -selection clipboard -target image/png -i $f' ;;
  "Blur") scrot -sblur '/tmp/%F_%T_$wx$h.png' -e 'xclip -selection clipboard -target image/png -i $f' ;;
  # "current window (save)") maim -u -B -d .3 -f png -m 10 -i "$(xdotool getactivewindow)" ~/Pictures/ss/$(date '+%y%m%d-%H%M-%S').png ;;
  "Fullscreen (save)") scrot -d 1 ~/Pictures/ss/$(date '+%y%m%d-%H%M-%S').png ;;
	# "Selection") scrot -us '/tmp/%F_%T_$wx$h.png' -e 'xclip -selection clipboard -target image/png -i $f' ;;
	# "current window") scrot -u '/tmp/%F_%T_$wx$h.png' -e 'xclip -selection clipboard -target image/png -i $f' ;;
	"Fullscreen") scrot -d 1 '/tmp/%F_%T_$wx$h.png' -e 'xclip -selection clipboard -target image/png -i $f' ;;
esac
